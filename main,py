import os
import asyncio
from pyrogram import Client

# اگر میخوای مستقیم داخل کد باشه:
api_id = 28190856
api_hash = "6b9b5309c2a211b526c6ddad6eabb521"
phone_number = "+989011243659"  # شماره‌ی خودت با +98

app = Client("my_account", api_id=api_id, api_hash=api_hash, phone_number=phone_number)

async def update_name():
    while True:
        from datetime import datetime
        now = datetime.now().strftime("%H:%M")
        name_with_time = f"𝓎𝑒 𝒶𝓂𝒾𝓇 {now}"
        await app.update_profile(first_name=name_with_time)
        await asyncio.sleep(60)  # هر 60 ثانیه آپدیت می‌شود

async def main():
    await app.start()
    print("Bot is running...")
    await update_name()  # شروع به آپدیت ساعت می‌کند

asyncio.run(main())

import asyncio
from datetime import datetime
from pyrogram import Client

api_id = 28190856  # جایگزین کن با API ID خودت
api_hash = "6b9b5309c2a211b526c6ddad6eabb521"  # جایگزین کن با API Hash خودت
phone_number = "+989011243659"  # شماره تلگرامت

# فونت دلخواهت
font_name = "𝓎𝑒 𝒶𝓂𝒾𝓇"

app = Client("my_account", api_id=api_id, api_hash=api_hash, phone_number=phone_number)

async def update_name():
    while True:
        now = datetime.now().strftime("%H:%M")  # ساعت به صورت 24 ساعته
        new_name = f"{font_name} {now}"
        await app.update_profile(first_name=new_name)
        await asyncio.sleep(60)  # هر 60 ثانیه آپدیت می‌کنه

async def main():
    await app.start()
    print("Bot is running...")
    await update_name()  # شروع آپدیت اسم

asyncio.run(main())

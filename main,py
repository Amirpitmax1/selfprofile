from pyrogram import Client
import asyncio
from datetime import datetime

# مشخصات اکانتت
api_id = "28190856"
api_hash = "6b9b5309c2a211b526c6ddad6eabb521"

app = Client("my_account", api_id=api_id, api_hash=api_hash)

# فونت اسم شما
base_name = "𝓎𝑒 𝒶𝓂𝒾𝓇"

async def update_username():
    await app.start()
    while True:
        # گرفتن ساعت فعلی
        current_time = datetime.now().strftime("%H:%M")
        # ساخت نام جدید با ساعت
        new_name = f"{base_name} {current_time}"
        try:
            await app.update_profile(first_name=new_name)
            print(f"Username updated to: {new_name}")
        except Exception as e:
            print(f"Error updating username: {e}")
        await asyncio.sleep(60)  # هر 60 ثانیه آپدیت می‌کنه

asyncio.run(update_username())
